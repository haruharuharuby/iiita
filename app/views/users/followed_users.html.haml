.container-fluid
  .row
    .col-sm-3.col-md-2
      = render partial:"sidebar", locals:{ user: @user }
    .col-sm-9.col-md-10.main
      .row
        = render partial:"stats", locals: { user: @user }
      .row
        = render partial:"following_list", locals:{ users: @user.followed, followable: @user == current_user }
