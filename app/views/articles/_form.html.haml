= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :publication
    = f.check_box :publication
  .field
    = f.label :draft
    = f.check_box :draft
  .actions
    = f.submit 'Save'
